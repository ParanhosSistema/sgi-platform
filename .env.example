
# ==============================================
# SGI Platform - Environment Variables Template
# ==============================================
# IMPORTANT: Copy this file to .env and fill with real values
# NEVER commit .env file to version control

# Domain Configuration
DOMAIN=example.com
ACME_EMAIL=admin@example.com

# Database Configuration
POSTGRES_DB=sgi_platform
POSTGRES_USER=sgi_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARS
JWT_EXPIRES_IN=7d

# NextAuth Configuration
NEXTAUTH_SECRET=CHANGE_ME_NEXTAUTH_SECRET_MINIMUM_32_CHARS
NEXTAUTH_URL=https://example.com

# Traefik Dashboard Authentication
# Generate with: echo $(htpasswd -nb admin password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$CHANGE_ME

# Admin User (Initial Setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# API Configuration
API_PORT=3001
CORS_ORIGIN=https://example.com

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=noreply@example.com

# Storage Configuration (Optional)
S3_BUCKET=sgi-platform-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=CHANGE_ME_S3_ACCESS_KEY
S3_SECRET_KEY=CHANGE_ME_S3_SECRET_KEY

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Session Configuration
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_MINIMUM_32_CHARS
SESSION_MAX_AGE=86400

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
